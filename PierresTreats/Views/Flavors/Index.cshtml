@{
  Layout = "_Layout";
}


@using PierresTreats.Models;
@model List<PierresTreats.Models.Flavor>;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
} 


<ul>
  @foreach (Flavor Flavor in Model)
{
  <li>@Html.ActionLink($"{Flavor.Name}", "Show", new { id = Flavor.FlavorId})</li>
}
</ul>


<p>@Html.ActionLink("Add Flavor", "Create")</p>
