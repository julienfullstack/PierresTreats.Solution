@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat
@using PierresTreats.Models

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

 @using (Html.BeginForm("Edit", "Treats", new { id = Model.TreatId }, FormMethod.Post))
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <input class="btn" type ="submit" value="Edit" onclick="return confirm('Are you sure you want to edit this Treat?');"/>
}

